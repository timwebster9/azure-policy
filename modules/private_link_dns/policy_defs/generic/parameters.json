{
    "effect": {
        "type": "String",
        "metadata": {
            "displayName": "Effect",
            "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": [
            "DeployIfNotExists",
            "Disabled"
        ],
        "defaultValue": "DeployIfNotExists"
    },
    "privateDnsZoneId": {
        "type": "String",
        "metadata": {
            "displayName": "privateDnsZoneId",
            "description": "The ID of the private DNS zone corresponding to the resource type",
            "strongType": "Microsoft.Network/privateDnsZones"
        }
    },
    "resourceType": {
        "type": "String",
        "metadata": {
            "displayName": "Resource type",
            "description": "The type of the resource the private endpoint is connected to. e.g. 'Microsoft.Sql/servers'"
        }
    },
    "privateDnsZoneGroupIds": {
        "type": "Array",
        "metadata": {
            "displayName": "privateDnsZoneGroupIds",
            "description": "List of Private DNS Zone Group IDs for specified resource. Also known as the 'sub-resource'"
        },
        "allowedValues": [
            "blob",
            "table",
            "vault",
            "file",
            "dfs",
            "SqlServer",
            "sql",
            "namespace",
            "registry",
            "dataFactory",
            "portal",
            "sites",
            "configurationStores",
            "SqlOnDemand",
            "Dev",
            "web",
            "domain",
            "topic"
        ]
    }
}