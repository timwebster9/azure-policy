{
    "auditActionsAndGroups": {
        "type": "array",
        "metadata": {
            "description": "The list of audit actions and groups",
            "displayName": "Audit actions and groups",
            "allowedValues": [
                "BATCH_COMPLETED_GROUP",
                "SUCCESSFUL_DATABASE_AUTHENTICATION_GROUP",
                "FAILED_DATABASE_AUTHENTICATION_GROUP"
            ]
        }
    },
    "eventHubRuleId": {
        "type": "String",
        "metadata": {
            "displayName": "Event Hub Authorization Rule Id",
            "description": "The Event Hub authorization rule Id for Azure Diagnostics. The authorization rule needs to be at Event Hub namespace level. e.g. /subscriptions/{subscription Id}/resourceGroups/{resource group}/providers/Microsoft.EventHub/namespaces/{Event Hub namespace}/authorizationrules/{authorization rule}",
            "strongType": "Microsoft.EventHub/Namespaces/AuthorizationRules",
            "assignPermissions": true
        }
    },
    "eventHubName": {
        "type": "string",
        "defaultValue": "eventhub",
        "metadata": {
            "description": "The name of the event hub."
        }
    },
    "logAnalyticsWorkspaceId": {
        "type": "string",
        "metadata": {
            "displayName": "Log Analytics workspace",
            "description": "Log Analytics workspace resource ID",
            "strongType": "omsWorkspace"
        }
    },
    "storageAccountId": {
        "type": "string",
        "metadata": {
            "displayName": "Storage account ID",
            "description": "Storage account resource ID"
        }
    },
    "storageEndpoint": {
        "type": "string",
        "metadata": {
            "displayName": "Storage account endpoint",
            "description": "Storage account blob URL. e.g. https://myaccount.blob.core.windows.net"
        }
    },
    "storageRetentionDays": {
        "type": "Integer",
        "metadata": {
            "displayName": "Storage account retention policy",
            "description": "Number of days to retain diagnostics logs"
        }
    },
    "logsEnabled": {
        "type": "String",
        "metadata": {
            "displayName": "Enable logs",
            "description": "Whether to enable logs stream to the Event Hub  - True or False"
        },
        "allowedValues": [
            "True",
            "False"
        ],
        "defaultValue": "True"
    }
}