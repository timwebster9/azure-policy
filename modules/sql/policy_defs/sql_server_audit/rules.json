{
    "if": {
        "allOf": [
            {
                "field": "type",
                "equals": "Microsoft.Sql/servers"
            }
        ]
    },
    "then": {
        "effect": "deployIfNotExists",
        "details": {
            "type": "Microsoft.Sql/servers/auditingSettings",
            "roleDefinitionIds": [
                "/providers/Microsoft.Authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
            ],
            "existenceCondition": {
                "allOf": [
                    {
                        "field": "Microsoft.Sql/servers/auditingSettings/state",
                        "equals": "Enabled"
                    },
                    {
                        "field": "Microsoft.Sql/servers/auditingSettings/isAzureMonitorTargetEnabled",
                        "equals": "true"
                    },
                    {
                        "field": "Microsoft.Insights/diagnosticSettings/eventHubAuthorizationRuleId",
                        "matchInsensitively": "[parameters('eventHubRuleId')]"
                    }
                ]
            },
            "deployment": {
                "properties": {
                    "mode": "incremental",
                    "template": {
                        "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                        "contentVersion": "1.0.0.0",
                        "parameters": {
                            "resourceName": {
                                "type": "string"
                            },
                            "eventHubRuleId": {
                                "type": "string"
                            },
                            "auditActionsAndGroups": {
                                "type": "array"
                            },
                            "eventHubName": {
                                "type": "string"
                            },
                            "logAnalyticsWorkspaceId": {
                                "type": "string"
                            },
                            "storageAccountId": {
                                "type": "string"
                            },
                            "storageAccountSubscriptionId": {
                                "type": "string"
                            },
                            "storageEndpoint": {
                                "type": "string"
                            },
                            "storageRetentionDays": {
                                "type": "int"
                            },
                            "logsEnabled": {
                                "type": "string"
                            },
                            "location": {
                                "type": "string"
                            }
                        },
                        "resources": [
                            {
                                "type": "Microsoft.Sql/servers/databases/providers/diagnosticSettings",
                                "apiVersion": "2021-05-01-preview",
                                "name": "[concat(parameters('resourceName'), '/master/', 'Microsoft.Insights/', 'auditSetByPolicy')]",
                                "location": "[parameters('location')]",
                                "properties": {
                                    "eventHubAuthorizationRuleId": "[parameters('eventHubRuleId')]",
                                    "eventHubName": "[parameters('eventHubName')]",
                                    "workspaceId": "[parameters('logAnalyticsWorkspaceId')]",
                                    "storageAccountId": "[parameters('storageAccountId')]",
                                    "logs": [
                                        {
                                            "category": "SQLSecurityAuditEvents",
                                            "enabled": "[parameters('logsEnabled')]",
                                            "retentionPolicy": {
                                                "enabled": true,
                                                "days": "[parameters('storageRetentionDays')]"
                                            }
                                        },
                                        {
                                            "category": "DevOpsOperationsAudit",
                                            "enabled": "[parameters('logsEnabled')]",
                                            "retentionPolicy": {
                                                "enabled": true,
                                                "days": "[parameters('storageRetentionDays')]"
                                            }
                                        }
                                    ]
                                }
                            },
                            {
                                "type": "Microsoft.Sql/servers/auditingSettings",
                                "name": "[concat(parameters('resourceName'), '/setByPolicy')]",
                                "apiVersion": "2021-02-01-preview",
                                "properties": {
                                    "auditActionsAndGroups": "[parameters('auditActionsAndGroups')]",
                                    "state": "Enabled",
                                    "retentionDays": "[parameters('storageRetentionDays')]",
                                    "isAzureMonitorTargetEnabled": true,
                                    "isDevopsAuditEnabled": true,
                                    "storageEndpoint": "[parameters('storageEndpoint')]",
                                    "storageAccountSubscriptionId": "[parameters('storageAccountSubscriptionId')]",
                                    "storageAccountAccessKey": "[listKeys(parameters('storageAccountId'), '2019-06-01').keys[0].value]"
                                }
                            }
                        ],
                        "outputs": {}
                    },
                    "parameters": {
                        "auditActionsAndGroups": {
                            "value": "[parameters('auditActionsAndGroups')]"
                        },
                        "eventHubRuleId": {
                            "value": "[parameters('eventHubRuleId')]"
                        },
                        "eventHubName": {
                            "value": "[parameters('eventHubName')]"
                        },
                        "logAnalyticsWorkspaceId": {
                            "value": "[parameters('logAnalyticsWorkspaceId')]"
                        },
                        "storageAccountId": {
                            "value": "[parameters('storageAccountId')]"
                        },
                        "storageAccountSubscriptionId": {
                            "value": "[parameters('storageAccountSubscriptionId')]"
                        },
                        "storageEndpoint": {
                            "value": "[parameters('storageEndpoint')]"
                        },
                        "storageRetentionDays": {
                            "value": "[parameters('storageRetentionDays')]"
                        },
                        "logsEnabled": {
                            "value": "[parameters('logsEnabled')]"
                        },
                        "location": {
                            "value": "[field('location')]"
                        },
                        "resourceName": {
                            "value": "[field('fullName')]"
                        }
                    }
                }
            }
        }
    }
}