{
    "if": {
        "allOf": [
            {
                "field": "type",
                "equals": "Microsoft.Sql/servers"
            }
        ]
    },
    "then": {
        "effect": "deployIfNotExists",
        "details": {
            "type": "Microsoft.Sql/servers/auditingSettings",
            "roleDefinitionIds": [
                "/providers/Microsoft.Authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
            ],
            "existenceCondition": {
                "allOf": [
                    {
                        "field": "Microsoft.Sql/servers/auditingSettings/state",
                        "equals": "Enabled"
                    },
                    {
                        "field": "Microsoft.Sql/servers/auditingSettings/isAzureMonitorTargetEnabled",
                        "equals": "true"
                    },
                    {
                        "field": "Microsoft.Sql/servers/auditingSettings/storageEndpoint",
                        "equals": "[parameters('storageEndpoint')]"
                    },
                    {
                        "field": "Microsoft.Sql/servers/devOpsAuditingSettings/state",
                        "equals": "Enabled"
                    },
                    {
                        "field": "Microsoft.Sql/servers/devOpsAuditingSettings/isAzureMonitorTargetEnabled",
                        "equals": "true"
                    },
                    {
                        "field": "Microsoft.Sql/servers/devOpsAuditingSettings/storageEndpoint",
                        "equals": "[parameters('storageEndpoint')]"
                    }
                ]
            },
            "deployment": {
                "properties": {
                    "mode": "incremental",
                    "template": {
                        "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                        "contentVersion": "1.0.0.0",
                        "parameters": {
                            "resourceName": {
                                "type": "string"
                            },
                            "sqlServerId": {
                                "type": "string"
                            },
                            "auditActionsAndGroups": {
                                "type": "array"
                            },
                            "logAnalyticsWorkspaceId": {
                                "type": "string"
                            },
                            "storageAccountId": {
                                "type": "string"
                            },
                            "storageAccountName": {
                                "type": "string"
                            },
                            "storageAccountSubscriptionId": {
                                "type": "string"
                            },
                            "storageEndpoint": {
                                "type": "string"
                            },
                            "storageRetentionDays": {
                                "type": "int"
                            },
                            "logsEnabled": {
                                "type": "string"
                            },
                            "location": {
                                "type": "string"
                            }
                        },
                        "variables": {
                            "StorageBlobContributor": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', 'ba92f5b4-2d11-453d-a403-e96b0029c9fe')]",
                            "uniqueRoleGuid": "[guid(parameters('storageAccountId'), variables('storageBlobContributor'), resourceId('Microsoft.Sql/servers', parameters('resourceName')))]"
                        },
                        "resources": [
                            {
                                "type": "Microsoft.Storage/storageAccounts/providers/roleAssignments",
                                "apiVersion": "2020-03-01-preview",
                                "name": "[concat(parameters('storageAccountName'), '/Microsoft.Authorization/', variables('uniqueRoleGuid'))]",
                                "properties": {
                                    "roleDefinitionId": "[variables('StorageBlobContributor')]",
                                    "principalId": "[reference(parameters('sqlServerId'), '2020-08-01-preview', 'Full').identity.principalId]",
                                    "scope": "[parameters('storageAccountId')]",
                                    "principalType": "ServicePrincipal"
                                }
                            },
                            {
                                "type": "Microsoft.Sql/servers/auditingSettings",
                                "name": "[concat(parameters('resourceName'), '/sqlAuditSetByPolicy')]",
                                "apiVersion": "2021-02-01-preview",
                                "properties": {
                                    "auditActionsAndGroups": "[parameters('auditActionsAndGroups')]",
                                    "state": "Enabled",
                                    "retentionDays": "[parameters('storageRetentionDays')]",
                                    "isAzureMonitorTargetEnabled": true,
                                    "isDevopsAuditEnabled": true,
                                    "storageEndpoint": "[parameters('storageEndpoint')]",
                                    "storageAccountSubscriptionId": "[parameters('storageAccountSubscriptionId')]"
                                }
                            },
                            {
                                "type": "Microsoft.Sql/servers/devOpsAuditingSettings",
                                "name": "[concat(parameters('resourceName'), '/default')]",
                                "apiVersion": "2021-02-01-preview",
                                "properties": {
                                    "auditActionsAndGroups": "[parameters('auditActionsAndGroups')]",
                                    "state": "Enabled",
                                    "retentionDays": "[parameters('storageRetentionDays')]",
                                    "isAzureMonitorTargetEnabled": true,
                                    "storageEndpoint": "[parameters('storageEndpoint')]",
                                    "storageAccountSubscriptionId": "[parameters('storageAccountSubscriptionId')]"
                                }
                            }
                        ],
                        "outputs": {}
                    },
                    "parameters": {
                        "auditActionsAndGroups": {
                            "value": "[parameters('auditActionsAndGroups')]"
                        },
                        "logAnalyticsWorkspaceId": {
                            "value": "[parameters('logAnalyticsWorkspaceId')]"
                        },
                        "storageAccountId": {
                            "value": "[parameters('storageAccountId')]"
                        },
                        "storageAccountName": {
                            "value": "[parameters('storageAccountName')]"
                        },
                        "storageAccountSubscriptionId": {
                            "value": "[parameters('storageAccountSubscriptionId')]"
                        },
                        "storageEndpoint": {
                            "value": "[parameters('storageEndpoint')]"
                        },
                        "storageRetentionDays": {
                            "value": "[parameters('storageRetentionDays')]"
                        },
                        "logsEnabled": {
                            "value": "[parameters('logsEnabled')]"
                        },
                        "location": {
                            "value": "[field('location')]"
                        },
                        "resourceName": {
                            "value": "[field('fullName')]"
                        },
                        "sqlServerId": {
                            "value": "[field('id')]"
                        }
                    }
                }
            }
        }
    }
}